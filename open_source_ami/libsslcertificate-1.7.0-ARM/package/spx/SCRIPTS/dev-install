# Install Script

build-install:
		MKDIR_NOCLEAN %SPXLIB/libsslcrt
		COPY_DIR		./ %IMAGE_TREE/usr/local/lib/
		ADD_LIBRARY_LINKS %IMAGE_TREE/usr/local/lib libsslcertificate.so.%PKG_MAJOR.%PKG_MINOR.%PKG_AUX
	    COPY_FILE ./libsslcertificate.so.%PKG_MAJOR.%PKG_MINOR.%PKG_AUX %SPXLIB/libsslcrt
	    ADD_LIBRARY_LINKS %SPXLIB/libsslcrt libsslcertificate.so.%PKG_MAJOR.%PKG_MINOR.%PKG_AUX
		
debug-install:
