# Install Script

build-install:
		MKDIR_NOCLEAN %SPXLIB/ipmipdkapi
		COPY_DIR		./ %IMAGE_TREE/usr/local/lib/
		ADD_LIBRARY_LINKS %IMAGE_TREE/usr/local/lib libipmipdkapi.so.%PKG_MAJOR.%PKG_MINOR.%PKG_AUX
		COPY_FILE ./libipmipdkapi.so.%PKG_MAJOR.%PKG_MINOR.%PKG_AUX %SPXLIB/ipmipdkapi
		ADD_LIBRARY_LINKS %SPXLIB/ipmipdkapi libipmipdkapi.so.%PKG_MAJOR.%PKG_MINOR.%PKG_AUX

debug-install:
