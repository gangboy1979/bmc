#Extract Source	in %SOURCE
extract_source:

#Build Source in %BUILD
build_source:
	CWD %BUILD/%PACKAGE/data
	INVOKE_MAKE

#Clean Source
clean_source:
	CWD %BUILD/%PACKAGE/data
	INVOKE_MAKE clean

#--------------------- Mandatory Rules for every binary package -------------------------

# Rules to create bt package
build_package-bt:
	PACK_SPX ./ %BUILD/%PACKAGE/data/bt.ko

# Rules to create bt_driver_dev package
build_package-bt_driver_dev:
	MKDIR_CLEAN %TEMPDIR/%PACKAGE/tmp
	COPY_FILE %BUILD/%PACKAGE/data/bt_timeout.h 	%TEMPDIR/%PACKAGE/tmp
	COPY_FILE %BUILD/%PACKAGE/data/bt.h 	%TEMPDIR/%PACKAGE/tmp
	COPY_FILE %BUILD/%PACKAGE/data/btifc.h 	%TEMPDIR/%PACKAGE/tmp
	COPY_FILE %BUILD/%PACKAGE/data/bt_ioctl.h 	%TEMPDIR/%PACKAGE/tmp
	PACK_SPX ./ %TEMPDIR/%PACKAGE/tmp
	
