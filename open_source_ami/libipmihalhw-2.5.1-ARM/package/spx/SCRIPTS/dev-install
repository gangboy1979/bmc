# Install Script

build-install:
		MKDIR_NOCLEAN %SPXLIB/ipmihalhw
		COPY_DIR		./ %IMAGE_TREE/usr/local/lib/
		ADD_LIBRARY_LINKS %IMAGE_TREE/usr/local/lib libipmihalhw.so.%PKG_MAJOR.%PKG_MINOR.%PKG_AUX
		COPY_FILE ./libipmihalhw.so.%PKG_MAJOR.%PKG_MINOR.%PKG_AUX %SPXLIB/ipmihalhw
		ADD_LIBRARY_LINKS %SPXLIB/ipmihalhw libipmihalhw.so.%PKG_MAJOR.%PKG_MINOR.%PKG_AUX

debug-install:
