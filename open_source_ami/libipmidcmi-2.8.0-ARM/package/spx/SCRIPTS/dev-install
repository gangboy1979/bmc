# Install Script

build-install:
		MKDIR_NOCLEAN %SPXLIB/ipmidcmi
		COPY_DIR		./ %IMAGE_TREE/usr/local/lib/
		ADD_LIBRARY_LINKS %IMAGE_TREE/usr/local/lib libipmidcmi.so.%PKG_MAJOR.%PKG_MINOR.%PKG_AUX
		CWD %IMAGE_TREE/usr/local/lib/ipmi
		CREATE_SOFT_LINK ../libipmidcmi.so.%PKG_MAJOR.%PKG_MINOR.%PKG_AUX libipmidcmi.so.%PKG_MAJOR.%PKG_MINOR.%PKG_AUX
		COPY_FILE ./libipmidcmi.so.%PKG_MAJOR.%PKG_MINOR.%PKG_AUX %SPXLIB/ipmidcmi
		ADD_LIBRARY_LINKS %SPXLIB/ipmidcmi libipmidcmi.so.%PKG_MAJOR.%PKG_MINOR.%PKG_AUX

debug-install:
